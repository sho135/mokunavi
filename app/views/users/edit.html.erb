<div class="container">
    <div class="container">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

          <h1>プロフィール編集</h1>

          <!--エラー通知-->
          <% if @user.errors.any? %>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>
          <%= form_with model: @user, url:users_path, local:true do |f| %>
            <h4>名前</h4>
            <%= f.text_field :name %>
            <h4>プロフィール画像</h4>
            <%= f.attachment_field :image %>
            <h4>紹介文</h4>
            <%= f.text_area :text %><br>
          <%= f.submit "更新" %>
          <% end %>

        </div>
    </div>
</div>