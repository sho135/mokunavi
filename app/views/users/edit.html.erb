<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

          <h2 class="main-title">プロフィール編集</h2>

          <!--エラー通知-->
          <% if @user.errors.any? %>
          <%= @user.errors.count %> errors prohibited this obj from being saved:
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>


          <%= form_with model: @user, url:user_path, local:true do |f| %>
          <div class="form-group">
            <label for="user_image">プロフィール画像</label><br>
            <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
            <label for="user_name">名前</label><br>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <label for="user_text">紹介文</label><br>
            <%= f.text_area :text %>
          </div>
          <div class="form-group">
            <%= f.submit "更新", class: "btn btn-secondary" %>
          </div>
          <% end %>

        </div>
    </div>
</div>