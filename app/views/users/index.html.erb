<div class="container px-5 px-sm-0">
  <div class="row">
    <div class-"col-md-3">

      <div class="sidebar_fixed">
        <%= attachment_image_tag @user, :image, :fill, 150, 150, fallback: "no_image.jpg", size: "150x150" %>
        <table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>プロフィール</th>
              <th><%= @user.text %></th>
            </tr>
            <tr>
              <th colspan="2">
                <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas' do %>
                <i class="fas fa-user-cog"></i>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
        <h2 class="main-title"><%= @user.name %>の投稿</h2>

        <table>
          <thead>
            <th></th>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
          </tbody>
            <tr>
              <td>
                <%= link_to user_path(post.user) do %>
                <%= attachment_image_tag post.user, :image, :fill, 70, 70, fallback: "no_image.jpg", size: "70x70" %>
                <% end %>
              </td>
              <td><%= link_to post.title, post_path(post.id) %></td>
              <td><%= link_to "コメント#{post.post_comments.count}件", post_path(post.id) %></td>
            </tr>
          <% end %>
        </table>
        <%= paginate @posts %>
    </div>
  </div>
</div>