<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="main-title">モクナビ！にログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group">
          <label for="user_name">ユーザー名</label><br>
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="form-group">
          <label for="user_password">パスワード</label><br>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :情報を保存 %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-secondary" %>
        </div>
      <% end %>

      <span>ユーザー登録がお済みでない方は<%= link_to "こちら", new_user_registration_path %></span>
    </div>
  </div>
</div>