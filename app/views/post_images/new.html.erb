<h1>追加</h1>

<div class="col-md-8 offset-md-1">
  <h4><%= @post.title %></h4>
      <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
        <%= link_to "編集する", edit_post_path(@post), class: "btn btn-light btn-circle pull-right" %>
        <% if @post.user == current_user %>
        <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-light btn-circle pull-right" %>
        <% end %>
      <div class="mx-auto">
        <p><%= @post.body %></p>
        <% if @post.post_images.present? %>
        <% @post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 200, 200, format: 'jpeg' %>
        <% end %>
        <% else %>
          画像はありません。
        <% end %>
        <p><%= @post_image.body %></p>
      </div>

      <%= form_with model: @post_image, url:post_post_images_path(@post), local:true do |f| %>

  <table>
    <tbody>
      <tr>
        <td>内容</td>
        <td><%= f.text_area :body %></td>
      </tr>
      <tr>
        <td>画像</td>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "投稿" %></td>
      </tr>
    </tbody>
  </table>

<% end %>
</div>


