<h1>全ての投稿</h1>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class-"col-md-3">

      <div class="sidebar-fixed">
        <%= attachment_image_tag @user, :image_id, :fill, 100, 100, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>プロフィール</th>
              <th><%= @user.text %></th>
            </tr>
            <tr>
                <th colspan="2"><%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas' do %>
                    <i class="fas fa-user-cog"></i>
                    <% end %>
                </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
        <h3>投稿一覧</h3>
    </div>
  </div>
</div>