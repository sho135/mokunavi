<div class="container px-5 px-sm-0">
  <div class="row">
    <div class-"col-md-3">

      <div class="sidebar-fixed">
        <%= attachment_image_tag @user, :image_id, :fill, 100, 100, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>プロフィール</th>
              <th><%= @user.text %></th>
            </tr>
            <tr>
              <th colspan="2">
                <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas' do %>
                <i class="fas fa-user-cog"></i>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h4><%= @post.title %></h4>
        <%= link_to "編集する", edit_post_path(@post), class: "btn btn-success" %>
        <div class="mx-auto">
          <% if @post.post_images.present? %>
          <% @post.post_images.each do |image| %>
            <%= attachment_image_tag image, :image, :fill, 200, 200, format: 'jpeg' %>
          <% end %>
          <% else %>
            画像はありません。
          <% end %>
        </div>
        <p><%= @post.body %></p>
        <%= link_to "+", posts_new_add_path, class: "btn btn-light btn-circle pull-right" %>
    </div>
  </div>
</div>


