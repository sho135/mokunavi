<div class="container px-5 px-sm-0">
  <div class="row">
    <div class-"col-md-3">

      <div class="sidebar-fixed">
        <%= attachment_image_tag @user, :image_id, :fill, 100, 100, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>プロフィール</th>
              <th><%= @user.text %></th>
            </tr>
            <tr>
              <th colspan="2">
                <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas' do %>
                <i class="fas fa-user-cog"></i>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h4><%= @post.title %></h4>
      <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
        <%= link_to "編集する", edit_post_path(@post), class: "btn btn-light btn-circle pull-right" %>
        <% if @post.user == current_user %>
        <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-light btn-circle pull-right" %>
        <% end %>
      <div class="mx-auto">
        <p><%= @post.body %></p>
        <% @post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 200, 200, format: 'jpeg' %>
          <p><%= @post_image.text %></p>
        <% end %>
      </div>

        <%= link_to "+", new_post_post_image_path(@post), class: "btn btn-light btn-circle pull-right" %>

      <div>
        <p>コメント件数：<%= @post.post_comments.count %></p>
          <% @post.post_comments.each do |post_comment| %>
          <%= post_comment.user.name %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
          <% if post_comment.user == current_user %>
        <div>
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
        </div>
          <% end %>
          <% end %>
      </div>
      <div>
        <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>

    </div>
  </div>
</div>


