<h1>新規追加</h1>

<%= form_with model: @post, url:posts_path, local:true do |f| %>

  <table>
    <tbody>
      <tr>
        <td>内容</td>
        <td><%= f.text_area :body %></td>
      </tr>
      <tr>
        <td>画像</td>
        <td><%= f.attachment_field :post_images_images, multiple: true %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "投稿" %></td>
      </tr>
    </tbody>
  </table>

<% end %>